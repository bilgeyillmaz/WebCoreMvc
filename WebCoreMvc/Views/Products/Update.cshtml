@{
    ViewData["Title"] = "Product Update";
}
<form action="/Products/Save" method="post">
    @{ if (ViewBag.message != null)
        {
            <div class="alert alert-danger">@ViewBag.message</div>
        }
    }
      <div class="mb-3">
    <label class="form-label">CategoryId</label>
    <input type="number" name="CategoryId" class="form-control" value="@ViewBag.product.CategoryId">
    </div>
     <div class="mb-3">
    <label class="form-label">ImageUrl</label>
    <input type="text" name="ImageUrl" class="form-control" value="@ViewBag.product.ImageUrl" >
    </div>
     <div class="mb-3">
    <label class="form-label">Name</label>
    <input type="text" name="Name" class="form-control" value="@ViewBag.product.Name">
    </div>
     <div class="mb-3">
    <label class="form-label">Price</label>
    <input type="number" name="Price" class="form-control" value="@ViewBag.product.Price">
    </div>
     <label class="form-label">Description</label>
    <input type="textarea" name="Description" class="form-control" value="@ViewBag.product.Description">
    </div>
    <div class="mb-3">
        <input type="hidden" name="Id" value="@ViewBag.product.Id">
    </div>
    <button type="submit" class="btn btn-success  col-md-3">Update</button>
</form>